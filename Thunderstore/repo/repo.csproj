<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="$(MSBuildThisFileDirectory)../base.props" />

    <PropertyGroup>
        <ThunderstoreNamespace>LordfireREPO</ThunderstoreNamespace>
        <ThunderstoreAuthToken>$(REPO_THUNDERSTORE_API_TOKEN)</ThunderstoreAuthToken>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'ReleaseThunderstore' ">
      <Optimize Condition=" '$(Optimize)' == '' ">true</Optimize>
    </PropertyGroup>

    <ItemGroup>
        <ThunderstorePublishCommunity Include="repo" CategorySlugs="libraries"/>
    </ItemGroup>

</Project>
